{
  "version": "0.0.12",
  "name": "btco",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "btco": "./build/index.js"
  },
  "exports": {
    "bun": "./src/resolution.ts"
  },
  "scripts": {
    "btco": "bun src/index.ts",
    "ord:reg": "ord --data-dir=./~ -r --index-sats server -j",
    "ord:sig": "ord --data-dir=./~ -s --index-sats server -j --http-port 8081",
    "ord": "ord --data-dir=./~ --index-sats server -j --http-port 8100",
    "build": "bun build ./src/* --outdir ./build --target node && cp package.json ./build"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/js-yaml": "^4.0.9",
    "bun-types": "^1.0.14"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "btco": "link:btco",
    "cbor2": "^1.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "js-yaml": "^4.1.0",
    "path": "^0.12.7",
    "soya-cli": "^0.16.31"
  }
}